{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es6"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "@h4nyu/react-native-zebra-rfid": ["src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
